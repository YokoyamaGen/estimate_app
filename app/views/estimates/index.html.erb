<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>見積書一覧</h2>
    <%= link_to "新規見積書作成", new_estimate_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>タイトル</th>
              <th>取引先</th>
              <th>金額</th>
              <th>ステータス</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @estimates.each do |estimate| %>
              <tr>
                <td><%= estimate.title %></td>
                <td><%= estimate.client %></td>
                <td><%= number_to_currency(estimate.amount, unit: "¥", precision: 0) if estimate.amount %></td>
                <td>
                  <% case estimate.status %>
                  <% when 'draft' %>
                    <span class="badge bg-secondary">下書き</span>
                  <% when 'sent' %>
                    <span class="badge bg-primary">送信済み</span>
                  <% when 'approved' %>
                    <span class="badge bg-success">承認済み</span>
                  <% when 'rejected' %>
                    <span class="badge bg-danger">却下</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "詳細", estimate, class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "編集", edit_estimate_path(estimate), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "削除", estimate, method: :delete, 
                              confirm: "本当に削除しますか？", 
                              class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
